{
  "description": "A collection of packages for working with the Blackbaud LMS's front-end APIs",
  "homepage": "https://github.com/groton-school/myschoolapp-reporting#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/groton-school/myschoolapp-reporting.git"
  },
  "author": {
    "name": "Seth Battis",
    "email": "sbattis@groton.org"
  },
  "type": "module",
  "scripts": {
    "build": "run-s build:*",
    "build:paths": "monorepo-package-paths -w --repository --homepage --author",
    "build:compile": "lerna run build",
    "release": "run-s release:*",
    "release:build": "run-s build",
    "release:main": "git push --follow-tags; git checkout main; git merge dev; git push",
    "release:publish": "pnpm publish -r --access public",
    "release:dev": "git checkout dev"
  },
  "devDependencies": {
    "@battis/eslint-config": "^2.0.7",
    "@battis/prettier-config": "^1.7.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/config-pnpm-scopes": "^19.9.1",
    "lerna": "^8.2.4",
    "monorepo-package-paths": "^0.4.2",
    "msar": "workspace:*",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.20.6"
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd"
}
